{% extends 'base.html.twig' %}

{% block title %} Affichage d'une annonce {% endblock %}

{% block body %}
    <div class="title" style="background-image:url({{ad.coverImage}})">
        <div class="container">
            <h1>{{ad.title}}</h1>
            <p>{{ad.introduction}}</p>
            <p class="h5">{{ad.rooms}} chambres pour <strong>{{ad.price}} &euro; /nuit</strong></p>
            <a href="{{ path('booking_create',{'slug':ad.slug}) }}" class="btn btn-warning">Réserver !</a>
            {% if app.user and app.user == ad.author %}
            <a href="{{ path('ads_edit',{'slug':ad.slug}) }}" class="btn btn-primary">Modifier</a>
            <a href="{{ path('ads_delete',{'slug':ad.slug}) }}" class="btn btn-danger" onclick="return confirm(`Etes-vous sûr de vouloir supprimer cette annonce ?`)">Supprimer</a>
            {% endif %}
        </div>:
    </div>

    <div class="container">
    
        <div class="row">
        
            <div class="col-md-8 mb-3">
            
                {{ad.content|raw}}

                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">

                        {% for image in ad.images %}

                            <li data-target="#carouselExampleIndicators" data-slide-to="{{loop.index0}}" class="{% if loop.first %} active {% endif %}"></li>
                            
                        {% endfor %}

                    </ol>
                    <div class="carousel-inner">

                        {% for image in ad.images %}

                        <div class="carousel-item {% if loop.first %}active{% endif %}">
                        <img src="{{image.url}}" class="d-block w-100" alt="...">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>{{ad.title}}</h5>
                            <p>{{image.caption}}</p>
                        </div>
                        </div>

                         {% endfor %}  

                    </div>

                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Précédent</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Suivant</span>
                    </a>
                </div>

                <hr>

                {% if ad.comments| length > 0 %}

                    <h3>Commentaires des voyageurs</h3>

                    <div class="alert alert-info">
                        <h5 class="alert-heading">
                            <div class="row align-items-center">
                                <div class="col-7">
                                    Note globale des voyageurs :
                                </div>
                                <div class="col-5">
                                    {% include 'inc/rating.html.twig' with {'rating' : ad.averageRatings } %}<br>
                                    <small>Cette moyenne est calculée sur {{ ad.comments|length }} avis. </small>
                                </div>
                            </div>
                        </h5>

                    </div>

                    {% for comment in ad.comments %}

                        <div class="bg-light-rounded">
                            <p><strong>{{ comment.author.fullName }}</strong> a dit : </p>
                            <blockquote>{{ comment.content }}</blockquote>
                            <p>Note donnée : {% include 'inc/rating.html.twig' with {'rating' : comment.rating } %}</p>
                        </div>

                    {% endfor %}

                {% else %}

                    <h5>Cette annonce n'a pas encore de commentaire.</h5>

                {% endif %}

            
            </div>

            <div class="col">
            {% set a = ad.author %}
                <div class="row">
                
                    <div class="col-4">
                        <a href="{{ path('user_show',{'slug':a.slug}) }}">
                            <img src="{{ a.avatar }}" alt="{{ a.fullName }}" class="avatar avatar-medium">
                        </a>
                    </div>

                    <div class="col">
                        <a href="{{ path('user_show',{'slug':a.slug}) }}">
                            <h3>{{ a.fullName }}</h3>
                        </a>
                        <span class="badge badge-warning">{{ a.ads| length }} {% if a.ads| length > 1 %} annonces {% else  %} annonce {% endif %}</span>
                    
                    </div>
                
                </div>
            
                <div class="col py-3">
                    {{ a.introduction| raw }}
                </div>

            </div>

        </div>
    
    </div>
{% endblock %}




    

