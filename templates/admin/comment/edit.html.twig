{% extends 'admin/base.html.twig' %}

{% block title %}Modifier un commentaire{% endblock %}

{% block body %}

    <main class="container-fluid">
    
        <h1 class="my-5 text-center">Modification du commentaire n° {{ comments.id }}</h1>
        <div class="row mt-5">
            <div class="col-8 offset-2 p-5 alert alert-info">
                <p>Annonce liée : {{ comments.ad.title }}</p>
                <p>Auteur : {{ comments.ad.author.fullName }}</p>
                <p>Date de création : {{ comments.createdAt|date('d/m/Y') }}</p>
                <p>Note donnée : {{ comments.rating }}</p>
            </div>
            <div class="col-8 offset-2 p-5">
                {{ form_start(form) }}

                {{ form_widget(form) }}
                    <button type="submit" class="btn btn-primary"><i class="fas fa-check"> Enregistrer les modifications</i></button>
                {{ form_end(form) }}
            </div>
        </div>            
    </main>
    
{% endblock %}
